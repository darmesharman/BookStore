@{
}
@model dynamic

<div class="text-center">
    <h1 class="display-4">Our Happy Customers</h1>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Customer</th>
                <th scope="col">Purchase</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Order)
            {
                <tr>
                    <td><blockquote class="blockquote"><p>@order.User</p></blockquote></td>
                    <td>
                        @foreach(var book in Model.Book)
                        {
                            @if(book.Id == order.BookId)
                            {
                        <blockquote class="blockquote">
                            <p class="mb-0">@book.Name</p>
                            <footer class="blockquote-footer">@book.Author</footer>
                        </blockquote>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="~/Home/List">List of our happy buyers</a>


    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>